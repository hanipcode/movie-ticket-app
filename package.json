{
  "name": "one-payment-dashboard-web",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "1.15.1",
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.0.0",
    "babel-jest": "^27.5.1",
    "babel-loader": "^8.2.5",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "@yarnpkg/lockfile": "^1.1.0",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^7.0.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "lerna": "^4.0.0",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "process": "^0.11.10",
    "react": "^17.0.2",
    "standard-version": "^9.5.0",
    "typescript": "^4.5.5",
    "whatwg-fetch": "^3.6.2"
  },
  "scripts": {
    "prepare": "husky install",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "start": "yarn workspace server run start",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:debug": "DEBUG_TEST=true jest",
    "test:coverage": "jest --collectCoverage",
    "test:watch": "jest --watchAll",
    "clean": "npm-run-all clean:*",
    "clean:build": "rm -rf packages/*/dist && rm -rf packages/*/build",
    "clean:cache": "rm -rf .parcel-cache",
    "clean:packages": "rm -rf node_modules && rm -rf packages/*/node_modules",
    "build": "npm-run-all build:*",
    "build:theme": "yarn workspace theme-hera run build",
    "build:tracker": "yarn workspace tracker run build",
    "build:api": "yarn workspace api run build",
    "build:common": "yarn workspace common run build",
    "build:pas": "yarn workspace payment-activation run build",
    "build:iris": "yarn workspace iris-payout run build",
    "build:partner": "yarn workspace partner run build",
    "build:transaction": "yarn workspace transaction run build",
    "build:integrated-app": "yarn workspace integrated-app run build",
    "build:app": "yarn workspace app run build",
    "watch": "npm-run-all --parallel -l watch:*",
    "watch:theme": "yarn workspace theme-hera run watch",
    "watch:tracker": "yarn workspace tracker run watch",
    "watch:api": "node exist api && yarn workspace api run watch",
    "watch:common": "node exist common && yarn workspace common run watch",
    "watch:pas": "node exist pas && yarn workspace payment-activation run watch",
    "watch:iris": "node exist iris && yarn workspace iris-payout run watch",
    "watch:partner": "node exist partner && yarn workspace partner run watch",
    "watch:transaction": "node exist transaction && yarn workspace transaction run watch",
    "watch:integrated-app": "node exist integrated-app && yarn workspace integrated-app run watch",
    "start:app": "yarn workspace app run start",
    "start:integrated-app": "yarn workspace integrated-app run start",
    "docs:start": "yarn workspace docs run storybook",
    "docs:build": "yarn workspace docs run build-storybook",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "yarn eslint packages",
    "lint:prettier": "yarn prettier --check packages",
    "format": "npm-run-all format:*",
    "format:eslint": "yarn eslint --fix packages",
    "format:prettier": "yarn prettier --write packages"
  },
  "lint-staged": {
    "*.{css,json,md}": "prettier --write",
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
